<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">





    <ScrollView
        android:id="@+id/contactos_scroll_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agregar_contacto"
                android:textColor="@color/colorBlanco"
                android:layout_gravity="center"
                android:paddingTop="@dimen/text_margin"
                android:textSize="28sp"/>

            <Button
                android:id="@+id/boton_agregar_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_green_light"
                android:text="Email"
                android:textColor="@color/colorDark"
                android:textColorLink="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_agregar_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_green_light"
                android:text="@string/telefono_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_agregar_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_green_light"
                android:text="@string/direccion_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_agregar_contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_red_light"
                android:text="@string/contacto_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_contacto"
                android:textColor="@color/colorBlanco"
                android:layout_gravity="center"
                android:paddingTop="@dimen/text_margin"
                android:textSize="28sp"/>

            <Button
                android:id="@+id/boton_ver_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_orange_light"
                android:text="Emails"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_ver_telefonos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/telefonos_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_ver_direcciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/direcciones_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_ver_contactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_red_light"
                android:text="@string/contactos_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton_ver_usuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_purple"
                android:text="@string/usuarios_contacto"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />

