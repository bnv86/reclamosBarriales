<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/eventos_scroll_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="40dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/static_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="5dp"
                    android:background="#11000000"
                    android:text="Seleccione estado"
                    android:textColor="@color/colorBlanco"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_estado"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/static_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:popupBackground="#232323"
                    android:background="#11000000" />

            </LinearLayout>

            <Button
                android:id="@+id/boton_buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBlue"
                android:text="Buscar"
                android:textColor="@color/colorBlanco"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!--
            <Button
                android:id="@+id/boton_por_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_orange_light"
                android:text="@string/por_estado"
                android:textColor="@color/colorDark"
                android:textSize="20dp"
                android:textStyle="bold" />
                -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>

