<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#99e6ff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_imagen"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/camera"
            android:padding="2dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_fecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_marginLeft="2dp"
                android:text="Fecha"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="2dp"
                    android:text="Categoria:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/id_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="2dp"
                    android:text="Categoria"
                    android:textColor="@color/colorBlueReal"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_estado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Estado:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/id_estado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Estado"
                    android:textColor="@color/colorBlueReal"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_suscriptos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="2dp"
                    android:text="Suscriptos:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cant_suscriptos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textColor="@color/colorBlueReal"
                    android:textSize="15sp" />
            </LinearLayout>
            -->

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/linear1"
        android:background="@color/colorDark" />

    <ImageView
        android:id="@+id/imagen_asociado"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_gravity="right"
        android:src="@mipmap/estrella1" />

</RelativeLayout>